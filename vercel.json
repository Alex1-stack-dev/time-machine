{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  },
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": "api",
  "devCommand": "uvicorn api.index:app --host 0.0.0.0 --port 3000 --reload",
  "installCommand": "pip install -r requirements.txt"
}
